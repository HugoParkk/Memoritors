<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>

    <style>
        * {
            margin: 0;
        }

        #container {
            display: flex;
            flex-direction: row;
        }

        h1 {
            margin-top: 0;
            background-color: #ccc;
            height: 80px;
            padding: 10px;
            line-height: 80px;
            font-size: 40px;
            margin-bottom: 0;

        }

        .mdeContainer {
            /* display: inline-block; */
            /* vertical-align: top; */
            /* margin-left: 14vw; */
            width: 70vw;
        }

        button {
            background-color: rgb(218, 218, 218);
            border: 1px solid rgb(218, 218, 218);
            border-radius: 10px;
            width: 40px;
            height: 40px;
            font-size: 40px;
            line-height: 10px;
        }

        select {
            border: 1px solid rgb(104, 104, 104);
            border-radius: 10px;
            font-size: 20px;
            /* width: 200px; */
            height: 50px;
        }

        .line {
            margin-top: 100px;
            width: 2px;
            height: 800px;
            background-color: #ccc;
        }

        .grid1 {
            width: 18vw;
            margin: 1vw 1vh;
        }


        .user {
            font-size: 1.4rem;
            /* text-align: center; */
        }

        #profileImg {
            width: 8vh;
            height: 8vh;
            border-radius: 10000px;
        }
        .dropBtn {
            background-color: rgb(218, 218, 218);
            color: black;
            font-size: 18px;
            border: none;
        }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: #ffffff;
            min-width: 160px;
            box-shadow: 0px 8px 16px 0px rgba(0, 0, 0, 0.2);
            z-index: 1;
            border-radius: 20px;
        }

        .dropdown-content button {
            border: none;
            width: 200px;
            font-size: 15px;
            background-color: white;
        }
        .dropdown-content form {
            border-radius: 10px;
            border: none;
            width: 200px;
            font-size: 15px;
            background-color: white;
        }
        .dropdown-content button:hover {
            background-color: #ddd;
        }
    </style>

    <link rel="stylesheet" href="./style/common.css">
    <script src="https://cdn.jsdelivr.net/simplemde/latest/simplemde.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/marked/marked.min.js"></script>
</head>

<body>
    <div id="container">
        <div class="grid1">
            <img id="profileImg" src="http://localhost:3000/uploadImage/<%= user.profileImg %> " alt="">
            <p class="user">
                <%= user.name %>
            </p>
            <hr>
            <div class="dropdown">
                <button class="dropBtn">â–¼</button>
                <div class="dropdown-content">
                    <form action="/signout" method="post" style="margin-bottom: .6vh;">
                        <button class="logout">Logout</button>
                    </form>
                    <form action="/uploadImage/<%= user.name %>" enctype="multipart/form-data"
                        method="post">
                        <input class="changeI" type="file" name="attachment">
                        <button class="changeI" type="submit" style="margin-top: .6vh;">Change Image</button>
                    </form>
                </div>
            </div>
            <div>
                <button>+</button>
                <button>-</button>
                <br>
                <select name="list" class="list">
                    <option value="">Memo 1</option>
                    <option value="">Memo 2</option>
                    <option value="">Memo 3</option>
                </select>
            </div>


        </div>
        <div class="mdeContainer">
            <h1>Memo 1</h1>
            <textarea id="editor"></textarea>
        </div>
    </div>

    <script>
        const editMde = new SimpleMDE({
            element: document.getElementById('editor'),
            spellChecker: false,
            initialValue: '## Stuff.... ',
            hideIcons: ['guide', 'fullscreen', 'side-by-side']
            // guide implmentation is open to you
            // fullscreen and sxs muss up layout
        });
        editMde.value('# Sample Markdown\n- one\n- two\n- three');


        let dropBtn = document.querySelector('.dropBtn');
        dropBtn.addEventListener('click', function () {
            let dropdown = document.querySelector('.dropdown-content');
            if (dropdown.style.display == 'block')
                dropdown.style.display = 'none';
            else
                dropdown.style.display = 'block';
        });
    </script>
</body>

</html>